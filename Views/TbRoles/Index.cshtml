@model IEnumerable<CapstoneProject_MySoldiers_DanWay.TbRole>

@{
    ViewData["Title"] = "Index";
}

<div class="jumbotron">
    <p>
        <a asp-action="Create">Add New</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th></th>
                <th>
                    @Html.DisplayNameFor(model => model.RoleName)
